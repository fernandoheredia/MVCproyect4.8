@model List<WebAppPracticaDCL.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Mis datos";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Tabla/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div class= "row">
    <div class="col-md-12">
    <table class="table">
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Correo</th>
        </tr>
        @foreach (var oElemento in Model)
        {
    <tr>
        <td>@oElemento.Id</td>
        <td>@oElemento.Nombre</td>
        <td>@oElemento.Correo</td>
    </tr>
        
        }
    </table>
    </div>

</div>

